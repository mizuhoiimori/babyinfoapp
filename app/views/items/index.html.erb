<%= render 'layouts/flash_message', obj: @item %>

<div class='container-fluid'>
  <div class='row'>
    <div class='col-md-4'>
      <%= render 'form', item: @item %>
    </div>
  </div>
    <div class='col-md-8'>
      <h2>ベビー用品一覧</h2>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th></th>
          <th>商品名</th>
          <th>カテゴリー</th>
          <th>購入価格</th>
          <th>購入店</th>
          <th>星評価</th>
          <th>レビュー</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= link_to item_path(item) do %>
                <%= attachment_image_tag(item, :item_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
                <% end %>
            </td>
            <td><%= link_to item.name, item_path(item), class: "item_#{item.id}" %></td>
            <td><%= item.category %></td>
            <td><%= item.price %></td>
            <td><%= item.store %></td>
            <td>
              <div id="star-rate-<%= item.id %>"></div>
              <script>
                $('#star-rate-<%= item.id %>').raty({
                  size: 36,
                  starOff: "<%= asset_path('star-off.png') %>",
                  starOn: "<%= asset_path('star-on.png') %>",
                  starHalf: "<%= asset_path('star-half.png') %>",
                  half: true,
                  readOnly: true,
                  score: <%= item.evaluation %>,
                });
              </script>
            </td>
            <td><%= item.body %></td>
            <td id="favorites_<%= item.id %>">
            <%= render 'favorites/favorite', item: item %>
            </td>
            <td>コメント数：<%= item.item_comments.count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>
